<script>
// ðŸ‘‡ AquÃ­ defines tu contenido jerÃ¡rquico
const treeData = {
  "content": "TÃ­tulo principal aquÃ­",
  "children": [
    {
      "content": "SubsecciÃ³n 1",
      "payload": { "fold": true },
      "children": [
        { "content": "Ãtem 1.1", "children": [] },
        { "content": "Ãtem 1.2", "children": [] }
      ]
    },
    {
      "content": "SubsecciÃ³n 2",
      "payload": { "fold": true },
      "children": [
        { "content": "Ãtem 2.1", "children": [] },
        { "content": "Ãtem 2.2", "children": [] }
