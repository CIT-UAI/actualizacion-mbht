<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/markmap-toolbar@0.18.12/dist/style.css">
</head>
<body>
<svg id="mindmap"></svg>

<script src="https://cdn.jsdelivr.net/npm/d3@7.9.0/dist/d3.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/markmap-view@0.18.12/dist/browser/index.js"></script>
<script src="https://cdn.jsdelivr.net/npm/markmap-toolbar@0.18.12/dist/index.js"></script>

<script>
// 👇 Aquí defines tu contenido jerárquico
const treeData = {
  "content": "Título principal aquí",
  "children": [
    {
      "content": "Subsección 1",
      "children": [
        { "content": "Ítem 1.1", "children": [] },
        { "content": "Ítem 1.2", "children": [] }
      ]
    },
    {
      "content": "Subsección 2",
      "children": [
        { "content": "Ítem 2.1", "children": [] },
        { "content": "Ítem 2.2", "children": [] }
      ]
    }
  ]
};

// 👇 Aquí se crea el mapa y la toolbar mínima
(()=>{
  const mm = window.markmap.Markmap.create("svg#mindmap", null, treeData);

  const toolbar = new window.markmap.Toolbar({
    items: [
      window.markmap.Toolbar.createItem('zoom-in'),
      window.markmap.Toolbar.createItem('zoom-out'),
      window.markmap.Toolbar.createItem('fit')
    ]
  });
  toolbar.attach(mm);
  const toolbarEl = toolbar.render();
  toolbarEl.style.position = "absolute";
  toolbarEl.style.bottom = "20px";
  toolbarEl.style.right = "20px";
  document.body.append(toolbarEl);
})();
</script>

</body>
</html>